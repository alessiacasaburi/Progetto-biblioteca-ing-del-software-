<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LibriController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Label text="Catalogo Libri">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Cerca:" />
            <TextField fx:id="txtRicerca" promptText="Titolo, Autore o ISBN..." />
         </children>
      </HBox>

      <TableView fx:id="tabellaLibri" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colTitolo" prefWidth="200.0" text="Titolo" />
            <TableColumn fx:id="colAutori" prefWidth="200.0" text="Autori" />
            <TableColumn fx:id="colAnno" prefWidth="80.0" text="Anno" />
            <TableColumn fx:id="colIsbn" prefWidth="120.0" text="ISBN" />
            <TableColumn fx:id="colCopie" prefWidth="80.0" text="Copie" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <HBox spacing="10.0">
         <children>
            <Button fx:id="btnNuovo" mnemonicParsing="false" onAction="#handleNuovo" text="Nuovo Libro" />
            <Button fx:id="btnModifica" mnemonicParsing="false" onAction="#handleModifica" text="Modifica Selezionato">
               <cursor>
                  <Cursor fx:constant="NONE" />
               </cursor></Button>
            <Button fx:id="btnElimina" mnemonicParsing="false" onAction="#handleElimina" text="Elimina Selezionato" />
         </children>
      </HBox>
   </children>
</VBox>
