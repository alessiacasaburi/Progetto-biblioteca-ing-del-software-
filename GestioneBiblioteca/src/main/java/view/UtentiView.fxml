<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.UtentiController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Button fx:id="btnIndietro" mnemonicParsing="false" onAction="#handleIndietro" text="â† Indietro" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
            
            <Label text="Gestione Utenti">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label text="Cerca:" />
            <TextField fx:id="txtRicerca" promptText="Nome, Cognome o Matricola..." />
         </children>
      </HBox>

      <TableView fx:id="tabellaUtenti" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome" />
            <TableColumn fx:id="colCognome" prefWidth="150.0" text="Cognome" />
            <TableColumn fx:id="colMatricola" prefWidth="100.0" text="Matricola" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colPrestiti" prefWidth="100.0" text="Prestiti Attivi" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <HBox spacing="10.0">
         <children>
            <Button fx:id="btnNuovo" mnemonicParsing="false" onAction="#handleNuovo" text="Nuovo Utente" />
            <Button fx:id="btnModifica" mnemonicParsing="false" onAction="#handleModifica" text="Modifica Selezionato">
               <cursor>
                  <Cursor fx:constant="NONE" />
               </cursor></Button>
            <Button fx:id="btnElimina" mnemonicParsing="false" onAction="#handleElimina" text="Elimina Selezionato" />
         </children>
      </HBox>
   </children>
</VBox>